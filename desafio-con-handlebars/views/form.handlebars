<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Product</h3>
            <div class="card-body">
                <form action="/products" method="POST" name="products">
                    <div class="form-group">
                        Product name: <input type="text" name="product_name" class="form-control" placeholder="..."
                            required><br>
                    </div>
                    <div class="form-group">
                        Batch: <input type="text" name="batch" class="form-control" placeholder="..." required><br>
                    </div>
                    <div class="form-group">
                        Price: <input type="number" name="price" class="form-control" placeholder="$..." required><br>
                    </div>
                    <div class="form-group">
                        Category: <input type="text" name="category" class="form-control" placeholder="..."
                            required><br>
                    </div>
                    <div class="form-group">
                        <button>Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>