<h2 class="text-danger">Products list</h1>
  {{#if showList }}
<table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Category</th>
          </tr>
        </thead>
        <tbody>
          {{#each list}}
              <tr>
                  <th scope="row">{{this.id}}</th>
                  <td>{{this.title}}</td>
                  <td>${{this.price}}</td>
                  <td><img style="height: 3rem;" src="{{this.thumbnail}}" alt=""></td>
                  <td>{{this.category}}</td>
                </tr>
          {{/each}}
        </tbody>
      </table>
  {{else}}
    <h5 class="alert-danger rounded p-2">Resources not found</h5>  
{{/if}}